<!DOCTYPE html>
<div class="chat-wrap">
  <div class="inner-chat-wrap">
    <h1>Edit Chat</h1>
    <%= form_for :chat, url: "/chats/#{@chat.id}" do |f| %>
    <input type="hidden" name="_method" value="patch">
    <%= render partial: 'layouts/errors' %>
    <div class="form-group">
      <%= f.label :subject, "Subject" %>
      <%= f.text_field :subject, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :body, "Body" %>
      <%= f.text_field :body, class: "form-control"%>
    </div>
    <p>Member<%= f.radio_button :recipient, "Member" %></p>
    <p>Trainer<%= f.radio_button :recipient, "Trainer" %></p>
    <%= f.submit "Chat", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
