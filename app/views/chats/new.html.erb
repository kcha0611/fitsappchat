<!DOCTYPE html>
<div class="chat-wrap">
  <div class="inner-chat-wrap">
    <h1 class="chat-title">Chat</h1>
    <%= form_for :chat, url: '/chats' do |f|%>
    <%= render partial: 'layouts/errors' %>
    <div class="form-group">
      <%= f.label :subject, 'Subject' %>
      <%= f.text_field :subject, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body, 'Body' %>
      <%= f.text_area :body, :class => 'form-control' %>
    </div>
    <%= f.label :recipient, "Member" %>
    <%= f.radio_button :recipient, "Member"%>
    <%= f.label :recipient, "Trainer" %>
    <%= f.radio_button :recipient, "Trainer" %></br>
    <%= f.submit "Chat", :class=> "btn btn-primary"%>
    <% end %>
  </div>
</div>
